{
  "manifest_version": 2,
  "name": "Clay",
  "version": "1.0.0",
  "description": "Faster browsing",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "history",
    "webNavigation",
    "nativeMessaging",
    "tabGroups",
    "notifications",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "default_title",
    "default_popup": "popup/popup.html",
    "default_option": "option/option.html"
  },
  "options_ui": {
    "page": "view/view.html"
  },
  "background": {
    "scripts": ["background/index.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/index.js"]
    }
  ],
  "commands": {
    "open-view": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q"
      },
      "description": "Open Spile view."
    }
  }
}
