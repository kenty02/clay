{
  "manifest_version": 3,
  "name": "Clay",
  "description": "Your toolset for exploring web",
  "version": "0.1.0",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "history",
    "webNavigation",
    "nativeMessaging",
    "tabGroups",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "commands": {
    "open-view": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q"
      },
      "description": "Opening Clay viewer."
    }
  }
}
